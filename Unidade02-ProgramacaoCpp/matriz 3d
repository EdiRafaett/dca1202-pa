#include <iostream>

using namespace std;

int main(){
    int ***v, nx = 3, ny = 3, nz = 3, cont = 1;
    v = new int**[nx];
    v[0] = new int*[nx * ny];
    v[0][0] = new int [nx * ny * nz];

    for(int i = 1; i < nx; i++){
        v[i] = v[i-1] + ny;
    }

    for(int i = 0; i < nx; i++){
        if(i != 0){
            v[i][0] = v[i-1][ny-1] + nz;
        }
        for(int j = 1; j < ny; j++){
            v[i][j] = v[i][j-1] + nz;
        }
    }
//PREENCHENDO A MATRIZ:
    for (int i = 0; i < nx; i++) {
        for (int j = 0; j < ny; j++) {
            for (int k = 0; k < nz; k++) {
                v[i][j][k] = cont;
                cont ++;
            }
        }
    }

    //IMPRIMINDO VALORES DA MATRIZ:
    for(int i = 0; i < nx; i++){
        for(int j = 0; j < ny; j++){
            for(int k = 0; k < nz; k++){
                cout << v[i][j][k] << ", ";
            }
        }
    }

    delete[] v[0][0];
    delete[] v[0];
    delete[] v;

    return 0;
}

